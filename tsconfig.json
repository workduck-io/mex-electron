{
  "compilerOptions": {
    "baseUrl": "./",
    "allowJs": true,
    "module": "esnext",
    "target": "esnext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es2021", "dom"],
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@apis/*": ["src/apis/*"],
      "@components/*": ["src/components/*"],
      "@data/*": ["src/data/*"],
      "@editor/*": ["src/editor/*"],
      "@electron/*": ["src/electron/*"],
      "@hooks/*": ["src/hooks/*"],
      "@services/*": ["src/services/*"],
      "@store/*": ["src/store/*"],
      "@style/*": ["src/style/*"],
      "@mex-types/*": ["src/types/*"],
      "@ui/*": ["src/ui/*"],
      "@utils/*": ["src/utils/*"],
      "@views/*": ["src/views/*"]
    }
  },
  "include": ["src/**/*"]
}
