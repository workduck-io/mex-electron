{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es2021", "dom"],
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["./node_modules/*"]
    }
    // "strictNullChecks": true
  },
  "include": ["./src/**/*"]
}
